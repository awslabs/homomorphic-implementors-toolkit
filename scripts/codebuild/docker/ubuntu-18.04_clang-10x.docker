FROM 465824340922.dkr.ecr.us-west-2.amazonaws.com/hit-codebuild:ubuntu-18.04_base as ci-base

SHELL ["/bin/bash", "-c"]

RUN set -ex && \
    add-apt-repository ppa:ubuntu-toolchain-r/test && \
    apt-get update && \
    apt-get -y --no-install-recommends install clang-10

ENV CC=clang-10
ENV CXX=clang-cpp-10
